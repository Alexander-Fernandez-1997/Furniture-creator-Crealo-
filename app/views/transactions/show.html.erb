<%= render "shared/navbar" %>


<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            <div class="receipt bg-white p-3 rounded">
                <%#=image_tag("logo.png") %>
                <h1>CREALO</h1>
                <h4 class="mt-2 mb-3">Your order is confirmed!</h4>
                <h6 class="name">Hello  <%= @transaction.furniture.user.fullname %>,</h6><span class="fs-12 text-black-50">your order has been confirmed and will be shipped in two days</span>
                <hr>
                <div class="d-flex flex-row justify-content-between align-items-center order-details">
                    <div><span class="d-block fs-12">Order date</span><span class="font-weight-bold"><%= @transaction.created_at.to_date %></span></div>
                    <div><span class="d-block fs-12">Order number</span><span class="font-weight-bold"><%= @transaction.id %></span> <span class="font-weight-bold text-success"><%= @transaction.state %></span></div>
                    <div><span class="d-block fs-12">Payment method</span><span class="font-weight-bold">Credit card</span><img class="ml-1 mb-1 min-img" src="https://logos-marcas.com/wp-content/uploads/2020/04/Visa-Simbolo.png" width="20"></div>
                    <div><span class="d-block fs-12">Shipping Address</span><span class="font-weight-bold text-success">Argentina</span></div>
                </div>
                <hr>
                <div class="d-flex justify-content-between align-items-center product-details">
                    <div class="d-flex flex-row product-name-image"><img class="rounded furniture" src="https://woodfurniturestore.co.uk/wp-content/uploads/2020/12/large-bookcase-1.jpg" width="40">
                        <div class="d-flex flex-column justify-content-between ml-2">
                            <div><span class="d-block font-weight-bold p-name"><%= @transaction.furniture.category.capitalize %></span><span class="fs-12"><%= @transaction.furniture.material %></span></div><span class="fs-12">Qty: 1</span>
                        </div>
                    </div>
                    <div class="product-price">
                        <h5><%= humanized_money_with_symbol @transaction.amount %></h5>
                    </div>
                </div>

                <div class="mt-5 amount row">
                    <div class="d-flex justify-content-center col-md-6"><img class="cbar" src="https://como-funciona.co/wp-content/uploads/2018/03/codigo-de-barras.jpg" width="250" height="100"></div>
                    <div class="col-md-6">
                        <div class="billing">
                            <div class="d-flex justify-content-between"><span>Subtotal</span><span class="font-weight-bold"><%= humanized_money_with_symbol @transaction.amount %></span></div>
                            <div class="d-flex justify-content-between mt-2"><span>Shipping fee</span><span class="font-weight-bold">$15</span></div>
                            <div class="d-flex justify-content-between mt-2"><span>Tax</span><span class="font-weight-bold">$5</span></div>
                            <div class="d-flex justify-content-between mt-2"><span class="text-success">Discount</span><span class="font-weight-bold text-success">$20</span></div>
                            <hr>
                            <div class="d-flex justify-content-between mt-1"><span class="font-weight-bold">Total</span><span class="font-weight-bold text-success"><%= humanized_money_with_symbol @transaction.amount %></span></div>
                        </div>
                    </div>
                </div><span class="d-block">Expected delivery</span><span class="font-weight-bold text-success">two days</span><span class="d-block mt-3 text-black-50 fs-15">We will be sending a shipping confirmation email when the item is shipped!</span>
                <hr>
                <div class="d-flex justify-content-between align-items-center footer">
                    <div class="thanks"><span class="d-block font-weight-bold">Thanks for shopping</span><span>Crealo team</span></div>
                    <div class="d-flex flex-column justify-content-end align-items-end"><span class="d-block font-weight-bold">Need Help?</span><span>Call - 0810-CREALO-HELP</span></div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
body {
    background-color: #eee
}

.min-img {
  width: 50px;
}

.fs-12 {
    font-size: 12px
}

.fs-15 {
    font-size: 15px
}

.name {
    margin-bottom: -2px
}

.product-details {
    margin-top: 13px
}

.furniture {
  width: 400px  ;
}
.cbar {
  width: 400px;
}
.button {
  opacity: 0.1;
}
.footer:hover {
  color: black;
}
</style>
