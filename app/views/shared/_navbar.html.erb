<div class="navbar button fixed-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid ">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://i.pinimg.com/originals/2a/a9/0c/2aa90c96e69f53d8dd777804eacba2b9.jpg" %>
    <% end %>


    <button class="navbar-toggler" type="" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
